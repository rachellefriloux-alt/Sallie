<Page x:Class="SallieStudioApp.MotionAIPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SallieStudioApp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,0">
            <TextBlock Text="Motion AI" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="Analyze and generate human-like motion patterns" 
                       Style="{StaticResource SubheaderTextBlockStyle}"/>
        </StackPanel>

        <!-- Tab Navigation -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,20,20,0">
            <Button Name="AnalyzeTabButton" 
                    Content="Analyze" 
                    Click="AnalyzeTabButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,8,0"/>
            <Button Name="GenerateTabButton" 
                    Content="Generate" 
                    Click="GenerateTabButton_Click"
                    Style="{StaticResource DefaultButtonStyle}"
                    Margin="0,0,8,0"/>
            <Button Name="PatternsTabButton" 
                    Content="Patterns" 
                    Click="PatternsTabButton_Click"
                    Style="{StaticResource DefaultButtonStyle}"/>
        </StackPanel>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="2" Margin="20,20,20,20">
            <StackPanel Name="ContentPanel">
                <!-- Analyze Tab -->
                <StackPanel Name="AnalyzePanel" Visibility="Visible">
                    <Button Name="AnalyzeMotionButton" 
                            Content="Analyze Motion" 
                            Click="AnalyzeMotionButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Motion Analyses" 
                               Style="{StaticResource SubheaderTextBlockStyle}"
                               Margin="0,0,0,12"/>
                    
                    <ListView Name="AnalysesListView" 
                              MaxHeight="400"
                              Margin="0,0,0,20">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding MotionType}" 
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Confidence, Converter={StaticResource PercentageConverter}}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Emotions, Converter={StaticResource ListConverter}}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Context}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Generate Tab -->
                <StackPanel Name="GeneratePanel" Visibility="Collapsed">
                    <Button Name="GenerateMotionButton" 
                            Content="Generate Motion" 
                            Click="GenerateMotionButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Generated Patterns" 
                               Style="{StaticResource SubheaderTextBlockStyle}"
                               Margin="0,0,0,12"/>
                    
                    <ListView Name="PatternsListView" 
                              MaxHeight="400"
                              Margin="0,0,0,20">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Type}" 
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Style}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Duration, StringFormat='Duration: {0}s'}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Confidence, Converter={StaticResource PercentageConverter}}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Keyframes, StringFormat='Keyframes: {0}'}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Patterns Tab -->
                <StackPanel Name="PatternsPanel" Visibility="Collapsed">
                    <TextBlock Text="Motion Patterns Library" 
                               Style="{StaticResource SubheaderTextBlockStyle}"
                               Margin="0,0,0,12"/>
                    
                    <TextBlock Text="Browse and manage motion patterns for various activities including dance, sports, and gestures." 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    
                    <GridView Name="PatternsLibraryGridView" 
                              MaxHeight="400">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Width="200"
                                        Height="120"
                                        Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   TextWrapping="Wrap"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
