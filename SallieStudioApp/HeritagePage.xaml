<Page
    x:Class="SallieStudioApp.HeritagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="Heritage Browser"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Explore Sallie's identity DNA and learned beliefs"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- File Tree -->
            <Border Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="12">
                <StackPanel Spacing="8">
                    <TextBlock Text="Heritage Files"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,8"/>

                    <Button x:Name="CoreButton"
                            Content="ðŸ“œ core.json"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Click="FileButton_Click"
                            Tag="core"/>

                    <Button x:Name="PreferencesButton"
                            Content="âš™ï¸ preferences.json"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Click="FileButton_Click"
                            Tag="preferences"/>

                    <Button x:Name="LearnedButton"
                            Content="ðŸ§  learned.json"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Click="FileButton_Click"
                            Tag="learned"/>

                    <!-- Version History -->
                    <TextBlock Text="Version History"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,16,0,8"/>

                    <ItemsControl x:Name="VersionList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="12"
                                           Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Content Viewer -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="16">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="FileNameText"
                                   Text="core.json"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <TextBox Grid.Column="1"
                                 x:Name="SearchBox"
                                 Width="200"
                                 PlaceholderText="Search..."
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>

                    <Border Grid.Row="1"
                            Background="#111827"
                            CornerRadius="6"
                            Padding="12">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ContentViewer"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondary}"
                                       TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
