<Page
    x:Class="SallieStudioApp.LimbicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="Limbic State"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Real-time emotional state and historical trends"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Current State -->
            <Border Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="16">
                <StackPanel Spacing="16">
                    <TextBlock Text="Current State"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>

                    <!-- Trust -->
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Trust" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="TrustValue" Grid.Column="1" Text="0.50" Foreground="#8b5cf6"/>
                        </Grid>
                        <ProgressBar x:Name="TrustBar" Height="8" Value="50" Foreground="#8b5cf6"/>
                    </StackPanel>

                    <!-- Warmth -->
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Warmth" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="WarmthValue" Grid.Column="1" Text="0.60" Foreground="#22d3ee"/>
                        </Grid>
                        <ProgressBar x:Name="WarmthBar" Height="8" Value="60" Foreground="#22d3ee"/>
                    </StackPanel>

                    <!-- Energy/Arousal -->
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Energy" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="ArousalValue" Grid.Column="1" Text="0.70" Foreground="#f59e0b"/>
                        </Grid>
                        <ProgressBar x:Name="ArousalBar" Height="8" Value="70" Foreground="#f59e0b"/>
                    </StackPanel>

                    <!-- Mood/Valence -->
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mood" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="ValenceValue" Grid.Column="1" Text="0.60" Foreground="#3b82f6"/>
                        </Grid>
                        <ProgressBar x:Name="ValenceBar" Height="8" Value="60" Foreground="#3b82f6"/>
                    </StackPanel>

                    <!-- Posture -->
                    <Border Background="#222"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,8,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Current Mode"
                                       FontSize="11"
                                       Foreground="#6b7280"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="PostureValue"
                                       Text="PEER"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#8b5cf6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Agency Tier -->
                    <StackPanel>
                        <TextBlock Text="Agency Tier"
                                   FontSize="12"
                                   Foreground="#6b7280"/>
                        <TextBlock x:Name="TierValue"
                                   Text="Tier 1 - Associate"
                                   FontSize="14"
                                   Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <!-- Connection Status -->
                    <Border x:Name="ConnectionBorder"
                            CornerRadius="12"
                            Padding="10 4"
                            Background="#333"
                            HorizontalAlignment="Left">
                        <TextBlock x:Name="ConnectionText"
                                   Text="Disconnected"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Historical Trends -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="16">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Historical Trends"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <ComboBox x:Name="TimeRangeSelector"
                                  Grid.Column="1"
                                  Width="140"
                                  SelectedIndex="1"
                                  SelectionChanged="TimeRange_Changed">
                            <ComboBoxItem Content="Last Hour"/>
                            <ComboBoxItem Content="Last 24 Hours"/>
                            <ComboBoxItem Content="Last 7 Days"/>
                            <ComboBoxItem Content="Last 30 Days"/>
                        </ComboBox>
                    </Grid>

                    <!-- Graph Area -->
                    <Border Grid.Row="1"
                            Background="#111827"
                            CornerRadius="6"
                            Padding="16">
                        <Canvas x:Name="GraphCanvas"/>
                    </Border>

                    <!-- Legend -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Spacing="20"
                                HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="16" Height="4" Background="#8b5cf6" CornerRadius="2"/>
                            <TextBlock Text="Trust" Foreground="#9ca3af"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="16" Height="4" Background="#22d3ee" CornerRadius="2"/>
                            <TextBlock Text="Warmth" Foreground="#9ca3af"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="16" Height="4" Background="#f59e0b" CornerRadius="2"/>
                            <TextBlock Text="Arousal" Foreground="#9ca3af"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
