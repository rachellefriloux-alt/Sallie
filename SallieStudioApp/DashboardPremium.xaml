                            <Text Text="Warmth" Foreground="#E5E7EB" FontWeight="Medium" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Grid.Column="0" Maximum="100" Value="72" Height="8" Background="#374151" Foreground="#EC4899"/>
                                <Text Grid.Column="1" Text="72%" Foreground="#EC4899" FontWeight="Medium" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Arousal -->
                        <StackPanel>
                            <Text Text="Arousal" Foreground="#E5E7EB" FontWeight="Medium" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Grid.Column="0" Maximum="100" Value="68" Height="8" Background="#374151" Foreground="#F59E0B"/>
                                <Text Grid.Column="1" Text="68%" Foreground="#F59E0B" FontWeight="Medium" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Valence -->
