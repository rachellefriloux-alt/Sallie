                    </StackPanel>
                </StackPanel>
                
                <!-- Status and Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <!-- Connection Status -->
                    <Border x:Name="ConnectionStatusBorder" CornerRadius="20" Padding="16,8" Background="#1F2937">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse x:Name="ConnectionStatusDot" Width="12" Height="12" Fill="#10B981" Style="{StaticResource StatusIndicatorStyle}"/>
