                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="#1E293B" CornerRadius="16" Padding="16" HorizontalAlignment="Left" MaxWidth="400">
                                <Border.Effect>
                                    <DropShadowEffect Color="#8B5CF6" Opacity="0.2" BlurRadius="10" ShadowDepth="0"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Text Text="I'm here to assist you with various tasks including conversation, analysis, creative work, and much more. I'm designed to be a helpful and intelligent companion." 
                                           Foreground="#E5E7EB" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Text Text="ðŸ§ " FontSize="12"/>
                                        <Text Text="Processing: 32ms" Foreground="#10B981" FontSize="10"/>
                                        <Text Text="Confidence: 98%" Foreground="#3B82F6" FontSize="10"/>
                                        <Text Text="Tone: Helpful" Foreground="#EC4899" FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Enhanced Input Area -->
                    <Border Grid.Row="2" BorderBrush="#4C1D95" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="MessageInput" Grid.Column="0"
                                     Text="Type your message..."
                                     Foreground="#E5E7EB"
                                     Background="#374151"
                                     BorderBrush="#4B5563"
                                     BorderThickness="1"
                                     Padding="12,8"
                                     FontSize="14"
                                     CornerRadius="8"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="8,0,0,0">
                                <Button Content="ðŸŽ¤" Background="#374151" Foreground="#E5E7EB" Padding="12,8" CornerRadius="8"/>
                                <Button Content="ðŸ˜Š" Background="#374151" Foreground="#E5E7EB" Padding="12,8" CornerRadius="8"/>
                                <Button Content="ðŸ“Ž" Background="#374151" Foreground="#E5E7EB" Padding="12,8" CornerRadius="8"/>
