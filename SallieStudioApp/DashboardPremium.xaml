                                </Grid.ColumnDefinitions>
                                <ProgressBar Grid.Column="0" Maximum="100" Value="78" Height="8" Background="#374151" Foreground="#8B5CF6"/>
                                <Text Grid.Column="1" Text="78%" Foreground="#8B5CF6" FontWeight="Medium" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Posture -->
                        <StackPanel>
                            <Text Text="Posture" Foreground="#E5E7EB" FontWeight="Medium" Margin="0,0,0,4"/>
