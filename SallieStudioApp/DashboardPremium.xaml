                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Enhanced Limbic System Panel -->
            <Border Grid.Column="1" Style="{StaticResource PremiumCardStyle}" Margin="16,0,0,0">
                <StackPanel>
                    <Text Text="Limbic System" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Limbic Variables -->
                    <StackPanel Spacing="16">
                        <!-- Trust -->
                        <StackPanel>
                            <Text Text="Trust" Foreground="#E5E7EB" FontWeight="Medium" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Grid.Column="0" Maximum="100" Value="85" Height="8" Background="#374151" Foreground="#10B981"/>
