                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Text Text="ðŸ§¹" FontSize="16"/>
                            <StackPanel>
                                <Text Text="Memory Hygiene" Foreground="#10B981" FontWeight="Medium" FontSize="12"/>
                                <Text Text="Active" Foreground="#10B981" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Voice Commands -->
                    <Border CornerRadius="12" Padding="12,8" Background="#065F46">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Text Text="ðŸŽ¤" FontSize="16"/>
                            <StackPanel>
                                <Text Text="Voice Commands" Foreground="#10B981" FontWeight="Medium" FontSize="12"/>
                                <Text Text="Active" Foreground="#10B981" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Undo Window -->
                    <Border CornerRadius="12" Padding="12,8" Background="#065F46">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Text Text="â°" FontSize="16"/>
                            <StackPanel>
                                <Text Text="Undo Window" Foreground="#10B981" FontWeight="Medium" FontSize="12"/>
                                <Text Text="Active" Foreground="#10B981" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Brain Forge -->
                    <Border CornerRadius="12" Padding="12,8" Background="#065F46">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Text Text="ðŸ§ " FontSize="16"/>
                            <StackPanel>
                                <Text Text="Brain Forge" Foreground="#10B981" FontWeight="Medium" FontSize="12"/>
                                <Text Text="Active" Foreground="#10B981" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Enhanced Main Content Area -->
        <Grid Grid.Row="2" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Enhanced Chat Interface -->
            <Border Grid.Column="0" Style="{StaticResource PremiumCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
