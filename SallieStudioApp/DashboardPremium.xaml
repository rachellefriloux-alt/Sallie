                    </Grid.RowDefinitions>
                    
                    <!-- Chat Header -->
                    <Border Grid.Row="0" BorderBrush="#4C1D95" BorderThickness="0,0,0,1" Padding="0,0,0,16">
                        <StackPanel>
                            <Text Text="Conversation with Sallie" Style="{StaticResource SubheaderTextStyle}"/>
                            <Text x:Name="ConversationStatusText" Text="Ready to chat" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Messages Area -->
                    <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto" Padding="0,8">
                        <StackPanel x:Name="MessagesPanel" Spacing="12">
                            <!-- Sample Messages with Enhanced Design -->
                            <Border Background="#1E293B" CornerRadius="16" Padding="16" HorizontalAlignment="Left" MaxWidth="400">
                                <Border.Effect>
                                    <DropShadowEffect Color="#8B5CF6" Opacity="0.2" BlurRadius="10" ShadowDepth="0"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Text Text="Hello! I'm Sallie, your AI companion. How can I help you today?" 
                                           Foreground="#E5E7EB" TextWrapping="Wrap"/>
