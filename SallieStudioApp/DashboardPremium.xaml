                </StackPanel>
                
                <!-- Quick Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Content="ðŸ””" Background="#374151" Foreground="#E5E7EB" Padding="8,4" CornerRadius="6"/>
