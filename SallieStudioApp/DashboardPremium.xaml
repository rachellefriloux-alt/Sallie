                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Enhanced Footer -->
        <Border Grid.Row="3" Background="#1E293B" Padding="24,16" BorderBrush="#4C1D95" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
