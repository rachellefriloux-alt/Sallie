<Page
    x:Class="SallieStudioApp.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Projects &amp; Building Together"
                           FontSize="28"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Create projects, extensions, and build things together with Sallie"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:ConnectionId='8' Content="+ New Project"                         />
                <Button x:ConnectionId='9' Content="+ New Extension"                           />
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Projects and Extensions List -->
            <Border Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="16">
                <Grid RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tabs -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:ConnectionId='5' x:Name="ProjectsTabBtn" Content="Projects"                   Tag="projects"/>
                        <Button x:ConnectionId='6' x:Name="ExtensionsTabBtn" Content="Extensions"                   Tag="extensions"/>
                        <Button x:ConnectionId='7' x:Name="SkillsTabBtn" Content="Skills"                   Tag="skills"/>
                    </StackPanel>

                    <!-- Filter -->
                    <TextBox x:ConnectionId='3' Grid.Row="1"
                             x:Name="SearchBox"
                             PlaceholderText="Search..."
                                                         />

                    <!-- List -->
                    <ScrollViewer Grid.Row="2">
                        <StackPanel x:ConnectionId='4' x:Name="ItemsList" Spacing="8"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="6"
                    Padding="16">
                <ScrollViewer>
                    <StackPanel x:ConnectionId='2' x:Name="DetailsPanel" Spacing="12">
                        <TextBlock Text="Select an item to view details"
                                   Foreground="#6b7280"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</Page>

