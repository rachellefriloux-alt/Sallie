<Page
    x:Class="SallieStudioApp.HypothesesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="Hypothesis Management"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Review and validate patterns discovered by the Dream Cycle"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Hypotheses List -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackground}"
                CornerRadius="6"
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:ConnectionId='2' x:Name="HypothesesPanel" Spacing="12">
                    <!-- Empty state -->
                    <TextBlock x:ConnectionId='3' x:Name="EmptyText"
                               Text="No pending hypotheses"
                               Foreground="#6b7280"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Page>

