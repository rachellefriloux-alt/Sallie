<Page
    x:Class="SallieStudioApp.SyncPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="Sync Status"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Cross-device synchronization and connected devices"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16">

                <!-- Sync Status -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Sync Status"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <Grid ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Last Sync" Foreground="#6b7280" FontSize="12"/>
                                <TextBlock x:ConnectionId='12' x:Name="LastSyncText"
                                           Text="Never"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Sync Status" Foreground="#6b7280" FontSize="12"/>
                                <TextBlock x:ConnectionId='11' x:Name="SyncStatusText"
                                           Text="Idle"
                                           FontSize="14"
                                           Foreground="#10b981"/>
                            </StackPanel>
                        </Grid>

                        <Button x:ConnectionId='10' x:Name="SyncNowBtn"
                                Content="Sync Now"
                                HorizontalAlignment="Left"
                                Padding="16,8"
                                                     />
                    </StackPanel>
                </Border>

                <!-- Connected Devices -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Connected Devices"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>

                            <Button x:ConnectionId='9' Grid.Column="1"
                                    Content="Refresh"
                                                                />
                        </Grid>

                        <ItemsControl x:ConnectionId='6' x:Name="DevicesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#222"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            BorderBrush="#374151"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Text="{Binding Info}"
                                                           FontSize="12"
                                                           Foreground="#6b7280"/>
                                            </StackPanel>

                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Padding="8,4"
                                                    Background="{Binding StatusBackground}">
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="11"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:ConnectionId='7' x:Name="NoDevicesText"
                                   Text="No devices connected"
                                   Foreground="#6b7280"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Sync Settings -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Sync Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <CheckBox x:ConnectionId='2' x:Name="AutoSyncCheck"
                                  Content="Enable automatic sync"
                                  Foreground="{StaticResource TextPrimary}"
                                  IsChecked="True"/>

                        <CheckBox x:ConnectionId='3' x:Name="SyncLimbicCheck"
                                  Content="Sync limbic state across devices"
                                  Foreground="{StaticResource TextPrimary}"
                                  IsChecked="True"/>

                        <CheckBox x:ConnectionId='4' x:Name="SyncMemoryCheck"
                                  Content="Sync conversation history"
                                  Foreground="{StaticResource TextPrimary}"
                                  IsChecked="True"/>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Sync Interval (minutes):"
                                       Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"/>
                            <TextBox x:ConnectionId='5' x:Name="SyncIntervalBox"
                                     Text="5"
                                     Width="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>

