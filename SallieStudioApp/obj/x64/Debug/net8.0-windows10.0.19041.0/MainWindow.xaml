<Window
    x:Class="SallieStudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sallie Studio">

    <Grid Background="{StaticResource WindowBackground}" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,12,0" Spacing="8">
            <Button x:ConnectionId='16' Content="Developer Console"                          />
        </StackPanel>

        <muxc:TabView x:ConnectionId='2' x:Name="MainTabs" Grid.Row="1" IsAddTabButtonVisible="False">
            <!-- Chat - Main interaction with Sallie -->
            <muxc:TabViewItem Header="💬 Chat">
                <Frame x:ConnectionId='15' x:Name="ChatFrame"/>
            </muxc:TabViewItem>

            <!-- Limbic State - Emotional state visualization -->
            <muxc:TabViewItem Header="🧠 Limbic">
                <Frame x:ConnectionId='14' x:Name="LimbicFrame"/>
            </muxc:TabViewItem>

            <!-- Heritage - Identity DNA browser -->
            <muxc:TabViewItem Header="📜 Heritage">
                <Frame x:ConnectionId='13' x:Name="HeritageFrame"/>
            </muxc:TabViewItem>

            <!-- Thoughts Log - Internal monologue -->
            <muxc:TabViewItem Header="💭 Thoughts">
                <Frame x:ConnectionId='12' x:Name="ThoughtsFrame"/>
            </muxc:TabViewItem>

            <!-- Hypotheses - Dream cycle discoveries -->
            <muxc:TabViewItem Header="🔬 Hypotheses">
                <Frame x:ConnectionId='11' x:Name="HypothesesFrame"/>
            </muxc:TabViewItem>

            <!-- Convergence - Onboarding flow -->
            <muxc:TabViewItem Header="🌀 Convergence">
                <Frame x:ConnectionId='10' x:Name="ConvergenceFrame"/>
            </muxc:TabViewItem>

            <!-- Control Panel - Creator control mechanisms -->
            <muxc:TabViewItem Header="🎛️ Control">
                <Frame x:ConnectionId='9' x:Name="ControlFrame"/>
            </muxc:TabViewItem>

            <!-- Sync - Cross-device synchronization -->
            <muxc:TabViewItem Header="🔄 Sync">
                <Frame x:ConnectionId='8' x:Name="SyncFrame"/>
            </muxc:TabViewItem>

            <!-- Projects - Building together -->
            <muxc:TabViewItem Header="🛠️ Projects">
                <Frame x:ConnectionId='7' x:Name="ProjectsFrame"/>
            </muxc:TabViewItem>

            <!-- Dashboard - System status -->
            <muxc:TabViewItem Header="📊 Dashboard">
                <local:Dashboard/>
            </muxc:TabViewItem>

            <!-- Settings -->
            <muxc:TabViewItem Header="⚙️ Settings">
                <Frame x:ConnectionId='6' x:Name="SettingsFrame"/>
            </muxc:TabViewItem>

            <!-- Plugins -->
            <muxc:TabViewItem Header="🧩 Plugins">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="220"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0">
                        <StackPanel x:ConnectionId='5' x:Name="PluginPanel" Spacing="10"/>
                    </ScrollViewer>

                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackground}"
                            Padding="10"
                            CornerRadius="6">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Plugin Log"
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <ScrollViewer x:ConnectionId='3' x:Name="LogScroll"
                                          VerticalScrollBarVisibility="Auto"
                                          Height="160">
                                <TextBlock x:ConnectionId='4' x:Name="LogBox"
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource TextSecondary}"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </muxc:TabViewItem>

            <!-- Console -->
            <muxc:TabViewItem Header="🖥️ Console">
                <local:DeveloperConsole/>
            </muxc:TabViewItem>
        </muxc:TabView>
    </Grid>
</Window>

