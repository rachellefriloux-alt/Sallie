<Page
    x:Class="SallieStudioApp.DeveloperConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Controls -->
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Developer Console"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Shell" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                <ComboBox x:ConnectionId='9' x:Name="ShellSelector" Width="140" SelectedIndex="0">
                    <ComboBoxItem Content="PowerShell"/>
                    <ComboBoxItem Content="CMD"/>
                    <ComboBoxItem Content="Python"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="Filter" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                <TextBox x:ConnectionId='8' x:Name="FilterBox" Width="180"                                     PlaceholderText="Type to filter"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:ConnectionId='6' Content="Copy"                          />
                <Button x:ConnectionId='7' Content="Clear"                           />
            </StackPanel>
        </Grid>

        <!-- Console Output -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackground}"
                CornerRadius="6"
                Padding="10">
            <ScrollViewer x:ConnectionId='4' x:Name="ConsoleScroll">
                <RichTextBlock x:ConnectionId='5' x:Name="ConsoleOutput"
                               FontFamily="Consolas"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Command Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
            <TextBox x:ConnectionId='2' x:Name="CommandBox"
                     Width="600"
                                                 
                     PlaceholderText="Enter command (PowerShell, Python, or CMD)"/>
            <Button x:ConnectionId='3' Content="Run"                         />
        </StackPanel>

    </Grid>
</Page>

