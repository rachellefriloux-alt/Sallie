<Page
    x:Class="SallieStudioApp.ControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="Control Panel"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="Creator control mechanisms and agency management"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16">

                <!-- Current Status -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Current Status"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <Grid ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Control Mode" Foreground="#6b7280" FontSize="12"/>
                                <TextBlock x:ConnectionId='15' x:Name="ControlModeText"
                                           Text="Autonomous"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="State Lock" Foreground="#6b7280" FontSize="12"/>
                                <TextBlock x:ConnectionId='14' x:Name="StateLockText"
                                           Text="Unlocked"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#10b981"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Emergency Stop" Foreground="#6b7280" FontSize="12"/>
                                <TextBlock x:ConnectionId='13' x:Name="EmergencyStopText"
                                           Text="Inactive"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#10b981"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Control Actions -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Control Actions"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <Grid ColumnSpacing="12" RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button x:ConnectionId='9' x:Name="TakeControlBtn"
                                    Content="Take Control"
                                    HorizontalAlignment="Stretch"
                                    Padding="16"
                                                             />

                            <Button x:ConnectionId='10' x:Name="ReleaseControlBtn"
                                    Grid.Column="1"
                                    Content="Release Control"
                                    HorizontalAlignment="Stretch"
                                    Padding="16"
                                                                />

                            <Button x:ConnectionId='11' x:Name="LockStateBtn"
                                    Grid.Row="1"
                                    Content="Lock State"
                                    HorizontalAlignment="Stretch"
                                    Padding="16"
                                                           />

                            <Button x:ConnectionId='12' x:Name="UnlockStateBtn"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Content="Unlock State"
                                    HorizontalAlignment="Stretch"
                                    Padding="16"
                                                             />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Emergency Controls -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16"
                        BorderBrush="#dc2626"
                        BorderThickness="1">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Emergency Controls"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#dc2626"/>

                        <TextBlock Text="Use these controls only in emergency situations. Emergency stop will immediately halt all autonomous actions."
                                   Foreground="#9ca3af"
                                   TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button x:ConnectionId='7' x:Name="EmergencyStopBtn"
                                    Content="🛑 EMERGENCY STOP"
                                    Background="#dc2626"
                                    Foreground="White"
                                    Padding="20,12"
                                                               />

                            <Button x:ConnectionId='8' x:Name="ResumeBtn"
                                    Content="Resume Operations"
                                    Padding="20,12"
                                                        />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Agency Settings -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Agency Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>

                        <StackPanel>
                            <TextBlock Text="Advisory Mode" Foreground="#6b7280" FontSize="12"/>
                            <CheckBox x:ConnectionId='6' x:Name="AdvisoryModeCheck"
                                      Content="Enable advisory mode (Sallie asks before acting)"
                                      Foreground="{StaticResource TextPrimary}"
                                                                    
                                                                      />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Current Trust Level" Foreground="#6b7280" FontSize="12"/>
                            <TextBlock x:ConnectionId='5' x:Name="TrustLevelText"
                                       Text="0.50 - Associate Level"
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Control History -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Control History"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>

                            <Button x:ConnectionId='4' Grid.Column="1"
                                    Content="Refresh"
                                                                />
                        </Grid>

                        <ItemsControl x:ConnectionId='2' x:Name="HistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#222"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Action}"
                                                       Foreground="{StaticResource TextPrimary}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Timestamp}"
                                                       Foreground="#6b7280"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>

