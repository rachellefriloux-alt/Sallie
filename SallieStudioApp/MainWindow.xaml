<Window
    x:Class="SallieStudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sallie Studio"
    Height="800"
    Width="1400">

    <Grid Background="{StaticResource WindowBackground}" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,12,0" Spacing="8">
            <Button Content="Developer Console" Click="OpenConsole_Click"/>
        </StackPanel>

        <muxc:TabView x:Name="MainTabs" Grid.Row="1" IsAddTabButtonVisible="False">
            <!-- Chat - Main interaction with Sallie -->
            <muxc:TabViewItem Header="ðŸ’¬ Chat">
                <Frame x:Name="ChatFrame"/>
            </muxc:TabViewItem>

            <!-- Limbic State - Emotional state visualization -->
            <muxc:TabViewItem Header="ðŸ§  Limbic">
                <Frame x:Name="LimbicFrame"/>
            </muxc:TabViewItem>

            <!-- Heritage - Identity DNA browser -->
            <muxc:TabViewItem Header="ðŸ“œ Heritage">
                <Frame x:Name="HeritageFrame"/>
            </muxc:TabViewItem>

            <!-- Thoughts Log - Internal monologue -->
            <muxc:TabViewItem Header="ðŸ’­ Thoughts">
                <Frame x:Name="ThoughtsFrame"/>
            </muxc:TabViewItem>

            <!-- Hypotheses - Dream cycle discoveries -->
            <muxc:TabViewItem Header="ðŸ”¬ Hypotheses">
                <Frame x:Name="HypothesesFrame"/>
            </muxc:TabViewItem>

            <!-- Convergence - Onboarding flow -->
            <muxc:TabViewItem Header="ðŸŒ€ Convergence">
                <Frame x:Name="ConvergenceFrame"/>
            </muxc:TabViewItem>

            <!-- Control Panel - Creator control mechanisms -->
            <muxc:TabViewItem Header="ðŸŽ›ï¸ Control">
                <Frame x:Name="ControlFrame"/>
            </muxc:TabViewItem>

            <!-- Sync - Cross-device synchronization -->
            <muxc:TabViewItem Header="ðŸ”„ Sync">
                <Frame x:Name="SyncFrame"/>
            </muxc:TabViewItem>

            <!-- Projects - Building together -->
            <muxc:TabViewItem Header="ðŸ› ï¸ Projects">
                <Frame x:Name="ProjectsFrame"/>
            </muxc:TabViewItem>

            <!-- Dashboard - System status -->
            <muxc:TabViewItem Header="ðŸ“Š Dashboard">
                <local:Dashboard/>
            </muxc:TabViewItem>

            <!-- Settings -->
            <muxc:TabViewItem Header="âš™ï¸ Settings">
                <Frame x:Name="SettingsFrame"/>
            </muxc:TabViewItem>

            <!-- Plugins -->
            <muxc:TabViewItem Header="ðŸ§© Plugins">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="220"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0">
                        <StackPanel x:Name="PluginPanel" Spacing="10"/>
                    </ScrollViewer>

                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackground}"
                            Padding="10"
                            CornerRadius="6">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Plugin Log"
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <ScrollViewer x:Name="LogScroll"
                                          VerticalScrollBarVisibility="Auto"
                                          Height="160">
                                <TextBlock x:Name="LogBox"
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource TextSecondary}"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </muxc:TabViewItem>

            <!-- Console -->
            <muxc:TabViewItem Header="ðŸ–¥ï¸ Console">
                <local:DeveloperConsole/>
            </muxc:TabViewItem>
        </muxc:TabView>
    </Grid>
</Window>
