<Window
    x:Class="SallieStudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sallie Studio"
    Height="800"
    Width="1400">

    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{StaticResource CardBackground}"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Sallie's Home Title and Connection Status -->
                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ’œ Sallie's Home"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <Border x:Name="ConnectionPill"
                            CornerRadius="12"
                            Padding="10,4"
                            Background="#333">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Ellipse x:Name="ConnectionDot" Width="8" Height="8" Fill="#888"/>
                            <TextBlock x:Name="ConnectionText"
                                       Text="Connecting..."
                                       FontSize="12"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right: Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh" Click="Refresh_Click" ToolTipService.ToolTip="Refresh web app"/>
                    <Button x:Name="PluginsBtn" Content="ðŸ§© Plugins" Click="TogglePlugins_Click" ToolTipService.ToolTip="Toggle plugins panel"/>
                    <Button Content="ðŸ–¥ï¸ Console" Click="OpenConsole_Click" ToolTipService.ToolTip="Open developer console"/>
                    <Button x:Name="SettingsBtn" Content="âš™ï¸" Click="OpenNativeSettings_Click" ToolTipService.ToolTip="Native settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: WebView2 -->
        <Grid Grid.Row="1" Grid.Column="0">
            <!-- WebView2 for web app -->
            <WebView2 x:Name="WebView"
                      Source="http://localhost:3000"
                      DefaultBackgroundColor="Transparent"/>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Background="{StaticResource WindowBackground}"
                    Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Loading Sallie..."
                               FontSize="16"
                               Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="LoadingStatus"
                               Text="Connecting to web app..."
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </Border>

            <!-- Error Overlay -->
            <Border x:Name="ErrorOverlay"
                    Background="{StaticResource WindowBackground}"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16" MaxWidth="400">
                    <TextBlock Text="âš ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Connection Error"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ErrorMessage"
                               Text="Unable to connect to the web app."
                               FontSize="14"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                        <Button Content="Retry" Click="Retry_Click" Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Open Setup Wizard" Click="OpenSetupWizard_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Plugins Panel (Collapsible) -->
        <Border x:Name="PluginsPanel"
                Grid.Row="1"
                Grid.Column="1"
                Background="{StaticResource CardBackground}"
                Width="280"
                Visibility="Collapsed"
                Padding="12">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="160"/>
                </Grid.RowDefinitions>

                <!-- Plugins Header -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ§© Plugins"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <Button Content="âœ•" Click="TogglePlugins_Click" 
                            Background="Transparent" 
                            HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- Plugin List -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel x:Name="PluginPanel" Spacing="8"/>
                </ScrollViewer>

                <!-- Plugin Log -->
                <Border Grid.Row="2"
                        Background="{StaticResource WindowBackground}"
                        CornerRadius="6"
                        Padding="8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Plugin Log"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondary}"/>
                        <ScrollViewer x:Name="LogScroll"
                                      VerticalScrollBarVisibility="Auto"
                                      Height="120">
                            <TextBlock x:Name="LogBox"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondary}"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                Background="{StaticResource CardBackground}"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Quick Actions -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="â–¶ï¸ Start All" Click="StartAll_Click" FontSize="12" Padding="8,4"/>
                    <Button Content="â¹ï¸ Stop All" Click="StopAll_Click" FontSize="12" Padding="8,4"/>
                    <Button Content="ðŸ©º Health Check" Click="HealthCheck_Click" FontSize="12" Padding="8,4"/>
                </StackPanel>

                <!-- Center: Sync Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="20,0">
                    <TextBlock x:Name="SyncStatus"
                               Text="â˜ï¸ Sync: Idle"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               VerticalAlignment="Center"/>
                    <Button Content="ðŸ”„" Click="TriggerSync_Click" FontSize="10" Padding="4,2" ToolTipService.ToolTip="Sync now"/>
                </StackPanel>

                <!-- Right: Version Info -->
                <TextBlock Grid.Column="2"
                           x:Name="VersionText"
                           Text="v1.0.0"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondary}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
