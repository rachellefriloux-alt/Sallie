<Page
    x:Class="SallieStudioApp.SetupWizard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="WizardTitle"
                   Text="Welcome to Sallie Studio"
                   FontSize="28"
                   Foreground="{StaticResource TextPrimary}"/>

        <!-- Content -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackground}"
                CornerRadius="6"
                Padding="20">
            <StackPanel x:Name="WizardContent" Spacing="20">
                <!-- Content injected dynamically -->
            </StackPanel>
        </Border>

        <!-- Navigation -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button x:Name="BackButton" Content="Back" Click="Back_Click" Visibility="Collapsed"/>
            <Button x:Name="NextButton" Content="Next" Click="Next_Click"/>
        </StackPanel>

    </Grid>
</Page>
