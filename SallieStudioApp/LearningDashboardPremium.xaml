<Page x:Class="SallieStudioApp.LearningDashboardPremium"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource BackgroundBrush}"
      Title="Learning Dashboard - Premium">

    <Page.Resources>
        <!-- Premium Gradient Brushes -->
        <LinearGradientBrush x:Key="LearningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#6366F1" Offset="0.5"/>
            <GradientStop Color="#4F46E5" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NeuralGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#06B6D4" Offset="0"/>
            <GradientStop Color="#0891B2" Offset="0.5"/>
            <GradientStop Color="#0E7490" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="MasteryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="0.5"/>
            <GradientStop Color="#047857" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProgressGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="0.5"/>
            <GradientStop Color="#B45309" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1F2937" Offset="0"/>
            <GradientStop Color="#111827" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#374151" Offset="0"/>
            <GradientStop Color="#1F2937" Offset="1"/>
        </LinearGradientBrush>

        <!-- Animation Storyboards -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LearningIndicator"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="1.0" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GlowEffect"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="0.8" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Skill Category Colors -->
        <SolidColorBrush x:Key="TechnicalColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="CreativeColor" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="AnalyticalColor" Color="#10B981"/>
        <SolidColorBrush x:Key="CommunicationColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="LeadershipColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="AdaptiveColor" Color="#06B6D4"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource LearningGradient}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource NeuralGradient}" Width="48" Height="48" CornerRadius="24">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ§ " FontSize="24" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Learning Dashboard" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF"/>
                        <TextBlock Text="Adaptive Learning & Neural Development" FontSize="14" Foreground="#E5E7EB"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Name="ConnectionStatus" Background="#10B98120" BorderBrush="#10B981" 
                           BorderThickness="1" CornerRadius="16" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Name="StatusIndicator" Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Name="StatusText" Text="Connected" FontSize="12" FontWeight="Medium" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>
                    <Button Name="RefreshButton" Content="ðŸ”„" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8" Margin="10,0,0,0"
                           Click="RefreshButton_Click"/>
                    <Button Name="SettingsButton" Content="âš™ï¸" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8" Margin="0,0,0,0"
                           Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Learning Metrics & Skills -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Learning Metrics -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Margin="0,0,0,20" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Learning Metrics" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Total Skills -->
                                <Border Grid.Column="0" Grid.Row="0" Background="#8B5CF620" CornerRadius="8" Padding="12" Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="24" FontSize="20" FontWeight="Bold" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Total Skills" FontSize="10" Foreground="#A78BFA" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Learning Velocity -->
                                <Border Grid.Column="1" Grid.Row="0" Background="#10B98120" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="87%" FontSize="20" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Learning Velocity" FontSize="10" Foreground="#34D399" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Neural Efficiency -->
                                <Border Grid.Column="0" Grid.Row="1" Background="#06B6D420" CornerRadius="8" Padding="12" Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="86%" FontSize="20" FontWeight="Bold" Foreground="#06B6D4" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Neural Efficiency" FontSize="10" Foreground="#67E8F9" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Learning Streak -->
                                <Border Grid.Column="1" Grid.Row="1" Background="#F59E0B20" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="15" FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Learning Streak" FontSize="10" Foreground="#FCD34D" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Skills Development -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Skills Development" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <ListBox Name="SkillsListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="300" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="12" Margin="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <Border Grid.Column="0" Background="#3B82F620" CornerRadius="4" Padding="4" Margin="0,0,8,0">
                                                        <TextBlock Text="ðŸ’»" FontSize="12" HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Medium" Foreground="#FFFFFF"/>
                                                        <TextBlock Text="{Binding Category}" FontSize="8" Foreground="#9CA3AF"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding MasteryLevel}" FontSize="8" FontWeight="Bold" Foreground="#8B5CF6"/>
                                                        <TextBlock Text="{Binding ProficiencyPercentage}" FontSize="8" Foreground="#9CA3AF"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <ProgressBar Grid.Row="1" Height="4" Background="#1F2937" Foreground="#8B5CF6" 
                                                           Value="{Binding Proficiency}" Margin="0,4,0,0" CornerRadius="2"/>
                                                
                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="Practice: {Binding PracticeCount}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="1" Text="Streak: {Binding PracticeStreak}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="2" Text="Neural: {Binding NeuralEfficiency}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="3" Text="Depth: {Binding KnowledgeDepth}" FontSize="8" Foreground="#6B7280"/>
                                                </Grid>
                                                
                                                <Border Grid.Row="3" BorderBrush="#374151" BorderThickness="0,0,0,1" Padding="0,4,0,0" Margin="0,4,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                    
                                                        <TextBlock Grid.Column="0" Text="Next Practice:" FontSize="8" Foreground="#9CA3AF"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding NextPracticeDate}" FontSize="8" Foreground="#8B5CF6" HorizontalAlignment="Right"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column - Learning Paths & Sessions -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Learning Paths -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Margin="0,0,0,20" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Learning Paths" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <ListBox Name="LearningPathsListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="12" Margin="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Medium" Foreground="#FFFFFF"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="8" Foreground="#9CA3AF"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding CompletionPercentage}" FontSize="12" FontWeight="Bold" Foreground="#8B5CF6"/>
                                                        <TextBlock Text="{Binding CurrentModule}" FontSize="8" Foreground="#9CA3AF"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <ProgressBar Grid.Row="1" Height="4" Background="#1F2937" Foreground="#8B5CF6" 
                                                           Value="{Binding CompletionPercentage}" Margin="0,8,0,0" CornerRadius="2"/>
                                                
                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="Duration: {Binding EstimatedDuration}h" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="1" Text="Modules: {Binding CurrentModuleNumber}/{Binding TotalModules}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="2" Text="Retention: {Binding RetentionScore}" FontSize="8" Foreground="#6B7280"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Recent Sessions -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Recent Sessions" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <ListBox Name="SessionsListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="8" Margin="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="ðŸ“š" FontSize="12" Margin="0,0,8,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding SkillName}" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                                        <TextBlock Text="{Binding PracticeType}" FontSize="8" Foreground="#9CA3AF"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2" Text="{Binding StartTime}" FontSize="8" Foreground="#6B7280"/>
                                                </Grid>
                                                
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="Performance: {Binding PerformanceScore}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="1" Text="Improvement: +{Binding ImprovementScore}" FontSize="8" Foreground="#10B981"/>
                                                    <TextBlock Grid.Column="2" Text="Focus: {Binding FocusLevel}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Grid.Column="3" Text="Efficiency: {Binding LearningEfficiency}" FontSize="8" Foreground="#6B7280"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,20,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Name="PracticeButton" 
                       Background="{StaticResource LearningGradient}" Foreground="#FFFFFF"
                       CornerRadius="8" Padding="20,12" Margin="0,0,10,0"
                       Click="PracticeButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŽ¯" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Start Practice" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Name="AssessButton" 
                       Background="{StaticResource NeuralGradient}" Foreground="#FFFFFF"
                       CornerRadius="8" Padding="20,12" Margin="10,0"
                       Click="AssessButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Assessment" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" Name="AdaptButton" 
                       Background="{StaticResource MasteryGradient}" Foreground="#FFFFFF"
                       CornerRadius="8" Padding="20,12" Margin="10,0,0,0"
                       Click="AdaptButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ§ " FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Adaptive Learning" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>