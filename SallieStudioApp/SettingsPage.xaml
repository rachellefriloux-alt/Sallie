<Page
    x:Class="SallieStudioApp.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource WindowBackground}">

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings"
                   FontSize="28"
                   Foreground="{StaticResource TextPrimary}"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">

                <!-- Profile -->
                <StackPanel>
                    <TextBlock Text="Active Profile" 
                               FontSize="16" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <ComboBox x:Name="ProfileSelector"
                              Width="200"
                              SelectionChanged="ProfileSelector_Changed">
                        <ComboBoxItem Content="Dev"/>
                        <ComboBoxItem Content="QA"/>
                        <ComboBoxItem Content="Demo"/>
                    </ComboBox>
                </StackPanel>

                <!-- Theme -->
                <StackPanel>
                    <TextBlock Text="Theme"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <ComboBox x:Name="ThemeSelector"
                              Width="200"
                              SelectionChanged="ThemeSelector_Changed">
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Sallie"/>
                    </ComboBox>
                </StackPanel>

                <!-- Repo Root -->
                <StackPanel>
                    <TextBlock Text="Repo Root"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBox x:Name="RepoRootBox"
                             Width="400"
                             TextChanged="RepoRootBox_TextChanged"/>
                </StackPanel>

                <!-- Progeny Root -->
                <StackPanel>
                    <TextBlock Text="Progeny Root (relative)"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBox x:Name="ProgenyRootBox"
                             Width="400"
                             TextChanged="ProgenyRootBox_TextChanged"/>
                </StackPanel>

                <!-- Ports -->
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <StackPanel>
                        <TextBlock Text="Preferred Port"
                                   FontSize="16"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBox x:Name="PreferredPortBox"
                                 Width="120"
                                 TextChanged="PreferredPortBox_TextChanged"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Fallback Port"
                                   FontSize="16"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBox x:Name="FallbackPortBox"
                                 Width="120"
                                 TextChanged="FallbackPortBox_TextChanged"/>
                    </StackPanel>
                </StackPanel>

                <!-- Docker Compose -->
                <StackPanel>
                    <TextBlock Text="Docker Compose File"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBox x:Name="DockerComposeBox"
                             Width="400"
                             TextChanged="DockerComposeBox_TextChanged"/>
                </StackPanel>

                <!-- Logging -->
                <StackPanel>
                    <TextBlock Text="Logging"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <CheckBox x:Name="EnableLoggingBox"
                              Content="Enable detailed logging"
                              Foreground="{StaticResource TextPrimary}"
                              Checked="EnableLoggingBox_Changed"
                              Unchecked="EnableLoggingBox_Changed"/>
                </StackPanel>

                <!-- Watcher -->
                <StackPanel>
                    <TextBlock Text="Watcher"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <CheckBox x:Name="EnableWatcherBox"
                              Content="Enable backend file watcher"
                              Foreground="{StaticResource TextPrimary}"
                              Checked="EnableWatcherBox_Changed"
                              Unchecked="EnableWatcherBox_Changed"/>
                </StackPanel>

                <!-- Advanced -->
                <StackPanel>
                    <TextBlock Text="Advanced"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>
                    <CheckBox x:Name="ReadOnlyBox"
                              Content="Enable read-only mode (Demo)"
                              Foreground="{StaticResource TextPrimary}"
                              Checked="ReadOnlyBox_Changed"
                              Unchecked="ReadOnlyBox_Changed"/>
                    <CheckBox x:Name="SilentModeBox"
                              Content="Silent Mode (no notifications)"
                              Foreground="{StaticResource TextPrimary}"
                              Checked="SilentModeBox_Changed"
                              Unchecked="SilentModeBox_Changed"/>
                </StackPanel>

                <!-- Cloud Sync -->
                <StackPanel>
                    <TextBlock Text="Cloud Sync"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimary}"/>

                    <CheckBox x:Name="CloudEnabledBox"
                              Content="Enable Cloud Sync"
                              Foreground="{StaticResource TextPrimary}"
                              Checked="CloudEnabledBox_Changed"
                              Unchecked="CloudEnabledBox_Changed"/>

                    <TextBox x:Name="CloudEndpointBox"
                             Width="400"
                             PlaceholderText="Cloud endpoint or folder path"
                             TextChanged="CloudEndpointBox_TextChanged"/>

                    <PasswordBox x:Name="CloudKeyBox"
                                 Width="400"
                                 PlaceholderText="Encryption Key (Base64)"
                                 PasswordChanged="CloudKeyBox_Changed"/>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox x:Name="CloudIntervalBox"
                                 Width="120"
                                 PlaceholderText="Sync interval (min)"
                                 TextChanged="CloudIntervalBox_TextChanged"/>
                        <Button Content="Sync Now" Click="SyncNow_Click"/>
                        <TextBlock x:Name="CloudStatusText"
                                   Foreground="{StaticResource TextSecondary}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
