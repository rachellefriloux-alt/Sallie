<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ðŸ¦š SALLIE PEACOCK THEME - WINUI 3 DESIGN SYSTEM -->
    <!-- Complete peacock/leopard theme for Sallie Studio desktop application -->
    
    <!-- Color Palette -->
    <SolidColorBrush x:Key="PeacockPrimary" Color="#6A5ACD"/>
    <SolidColorBrush x:Key="PeacockSecondary" Color="#4B0082"/>
    <SolidColorBrush x:Key="PeacockAccent" Color="#9370DB"/>
    <SolidColorBrush x:Key="PeacockLight" Color="#DDA0DD"/>
    <SolidColorBrush x:Key="PeacockDark" Color="#2E0854"/>
    <SolidColorBrush x:Key="PeacockVibrant" Color="#8A2BE2"/>
    <SolidColorBrush x:Key="PeacockSoft" Color="#E6E6FA"/>
    
    <!-- Leopard Colors -->
    <SolidColorBrush x:Key="LeopardPrimary" Color="#FF8C00"/>
    <SolidColorBrush x:Key="LeopardSecondary" Color="#FF6347"/>
    <SolidColorBrush x:Key="LeopardAccent" Color="#FFD700"/>
    <SolidColorBrush x:Key="LeopardDark" Color="#8B4513"/>
    <SolidColorBrush x:Key="LeopardLight" Color="#FFE4B5"/>
    <SolidColorBrush x:Key="LeopardSpot" Color="#CD853F"/>
    
    <!-- Neutral Colors -->
    <SolidColorBrush x:Key="Neutral50" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="Neutral100" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Neutral200" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="Neutral300" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="Neutral400" Color="#A3A3A3"/>
    <SolidColorBrush x:Key="Neutral500" Color="#737373"/>
    <SolidColorBrush x:Key="Neutral600" Color="#525252"/>
    <SolidColorBrush x:Key="Neutral700" Color="#404040"/>
    <SolidColorBrush x:Key="Neutral800" Color="#262626"/>
    <SolidColorBrush x:Key="Neutral900" Color="#171717"/>
    <SolidColorBrush x:Key="Neutral950" Color="#0A0A0A"/>
    
    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="Success" Color="#22C55E"/>
    <SolidColorBrush x:Key="Warning" Color="#F59E0B"/>
    <SolidColorBrush x:Key="Error" Color="#EF4444"/>
    <SolidColorBrush x:Key="Info" Color="#3B82F6"/>
    
    <!-- Glass Brushes -->
    <SolidColorBrush x:Key="GlassPeacock" Color="#1A6A5ACD"/>
    <SolidColorBrush x:Key="GlassLeopard" Color="#1AFF8C00"/>
    <SolidColorBrush x:Key="GlassMixed" Color="#1A6A5ACD"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PeacockGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6A5ACD" Offset="0"/>
        <GradientStop Color="#4B0082" Offset="0.5"/>
        <GradientStop Color="#9370DB" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PeacockGradientReverse" StartPoint="1,1" EndPoint="0,0">
        <GradientStop Color="#9370DB" Offset="0"/>
        <GradientStop Color="#4B0082" Offset="0.5"/>
        <GradientStop Color="#6A5ACD" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="LeopardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF8C00" Offset="0"/>
        <GradientStop Color="#FF6347" Offset="0.5"/>
        <GradientStop Color="#FFD700" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="MixedGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6A5ACD" Offset="0"/>
        <GradientStop Color="#FF8C00" Offset="0.5"/>
        <GradientStop Color="#9370DB" Offset="1"/>
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="PeacockRadialGradient">
        <GradientStop Color="#9370DB" Offset="0"/>
        <GradientStop Color="#6A5ACD" Offset="0.5"/>
        <GradientStop Color="#4B0082" Offset="1"/>
    </RadialGradientBrush>
    
    <RadialGradientBrush x:Key="LeopardRadialGradient">
        <GradientStop Color="#FFD700" Offset="0"/>
        <GradientStop Color="#FF8C00" Offset="0.5"/>
        <GradientStop Color="#FF6347" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Shadow Brushes -->
    <SolidColorBrush x:Key="ShadowPeacock" Color="#4A6A5ACD"/>
    <SolidColorBrush x:Key="ShadowLeopard" Color="#4AFF8C00"/>
    <SolidColorBrush x:Key="ShadowMixed" Color="#26A5ACD"/>
    
    <!-- Button Styles -->
    <Style x:Key="PeacockButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PeacockGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="{StaticResource PeacockGradientReverse}"/>
                                        <Setter Target="RootBorder.Translation" Value="0,-2"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="{StaticResource PeacockGradient}"/>
                                        <Setter Target="RootBorder.Translation" Value="0,0"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Opacity" Value="0.5"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="LeopardButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LeopardGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="{StaticResource LeopardGradient}"/>
                                        <Setter Target="RootBorder.Translation" Value="0,-2"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Translation" Value="0,0"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Opacity" Value="0.5"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Card Styles -->
    <Style x:Key="PeacockCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassPeacock}"/>
        <Setter Property="BorderBrush" Value="#1A6A5ACD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BackgroundTransition">
            <Setter.Value>
                <BrushTransition Duration="0:0:0.2"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="LeopardCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassLeopard}"/>
        <Setter Property="BorderBrush" Value="#1AFF8C00"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BackgroundTransition">
            <Setter.Value>
                <BrushTransition Duration="0:0:0.2"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TextBlock Styles -->
    <Style x:Key="PeacockTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
    </Style>
    
    <Style x:Key="PeacockSubtitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#CCFFFFFF"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
    </Style>
    
    <Style x:Key="PeacockBodyStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
    </Style>
    
    <!-- TextBox Styles -->
    <Style x:Key="PeacockTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource GlassPeacock}"/>
        <Setter Property="BorderBrush" Value="#1A6A5ACD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="PlaceholderForeground" Value="#80FFFFFF"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="ContentElement"
                                      HorizontalScrollMode="Disabled"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollMode="Auto"
                                      VerticalScrollBarVisibility="Hidden"
                                      ZoomMode="Disabled"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.BorderBrush" Value="#336A5ACD"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Focused">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.BorderBrush" Value="#6A5ACD"/>
                                        <Setter Target="RootBorder.Background" Value="#266A5ACD"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Opacity" Value="0.5"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- ProgressBar Styles -->
    <Style x:Key="PeacockProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="#1AFFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource PeacockGradient}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <Style x:Key="LeopardProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="#1AFFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource LeopardGradient}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <!-- Slider Styles -->
    <Style x:Key="PeacockSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PeacockPrimary}"/>
        <Setter Property="IsFocusEngagementEnabled" Value="True"/>
    </Style>
    
    <!-- ToggleSwitch Styles -->
    <Style x:Key="PeacockToggleSwitchStyle" TargetType="ToggleSwitch">
        <Setter Property="Foreground" Value="{StaticResource PeacockPrimary}"/>
        <Setter Property="OnContent" Value=""/>
        <Setter Property="OffContent" Value=""/>
    </Style>
    
    <!-- NavigationView Styles -->
    <Style x:Key="PeacockNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="Background" Value="{StaticResource GlassPeacock}"/>
        <Setter Property="MenuItemsSource" Value="{x:Null}"/>
        <Setter Property="IsBackButtonVisible" Value="Collapsed"/>
        <Setter Property="IsSettingsVisible" Value="False"/>
        <Setter Property="OpenPaneLength" Value="280"/>
    </Style>
    
    <!-- TabView Styles -->
    <Style x:Key="PeacockTabViewStyle" TargetType="TabView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TabStripBackground" Value="{StaticResource GlassPeacock}"/>
        <Setter Property="TabStripPlacement" Value="Top"/>
        <Setter Property="TabWidthMode" Value="SizeToContent"/>
    </Style>
    
    <!-- AppBarButton Styles -->
    <Style x:Key="PeacockAppBarButtonStyle" TargetType="AppBarButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="LabelPosition" Value="Collapsed"/>
    </Style>
    
    <!-- Avatar Styles -->
    <Style x:Key="PeacockAvatarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PeacockRadialGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PeacockAccent}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="60"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="LeopardAvatarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LeopardRadialGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LeopardAccent}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="60"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Badge Styles -->
    <Style x:Key="PeacockBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PeacockGradient}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    
    <Style x:Key="LeopardBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LeopardGradient}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    
    <!-- Animation Resources -->
    <Storyboard x:Key="PeacockShimmerAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetName="ShimmerElement"
                         Storyboard.TargetProperty="Translation.X"
                         From="-200" To="200" Duration="0:0:3"/>
    </Storyboard>
    
    <Storyboard x:Key="LeopardPulseAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetName="PulseElement"
                         Storyboard.TargetProperty="Scale.X"
                         From="1" To="1.1" Duration="0:0:1"
                         AutoReverse="True"/>
        <DoubleAnimation Storyboard.TargetName="PulseElement"
                         Storyboard.TargetProperty="Scale.Y"
                         From="1" To="1.1" Duration="0:0:1"
                         AutoReverse="True"/>
    </Storyboard>
    
    <Storyboard x:Key="PeacockRotateAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetName="RotateElement"
                         Storyboard.TargetProperty="Rotation"
                         From="0" To="360" Duration="0:0:20"/>
    </Storyboard>
    
    <!-- Leopard Pattern Brush -->
    <DrawingBrush x:Key="LeopardPatternBrush" TileMode="Tile" Viewport="0,0,200,200" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#FF8C00">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="40,160" RadiusX="20" RadiusY="20"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#FF6347">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="140,40" RadiusX="20" RadiusY="20"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#FFD700">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="80,80" RadiusX="15" RadiusY="15"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#FF8C00">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="160,140" RadiusX="25" RadiusY="25"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#FF6347">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="20,20" RadiusX="15" RadiusY="15"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#FFD700">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="180,60" RadiusX="20" RadiusY="20"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- Theme Resources -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="WindowBackground" Color="#F8F9FA"/>
            <SolidColorBrush x:Key="TextFillColorPrimary" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="TextFillColorSecondary" Color="#666666"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="WindowBackground" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="TextFillColorPrimary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextFillColorSecondary" Color="#CCCCCC"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    
</ResourceDictionary>
