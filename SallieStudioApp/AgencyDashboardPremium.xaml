<Page x:Class="SallieStudioApp.AgencyDashboardPremium"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource BackgroundBrush}"
      Title="Agency Dashboard - Premium">

    <Page.Resources>
        <!-- Premium Gradient Brushes -->
        <LinearGradientBrush x:Key="AgencyGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#6366F1" Offset="0.5"/>
            <GradientStop Color="#4F46E5" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="TrustGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#F97316" Offset="0.5"/>
            <GradientStop Color="#EF4444" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="0.5"/>
            <GradientStop Color="#047857" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#DC2626" Offset="0.5"/>
            <GradientStop Color="#B91C1C" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1F2937" Offset="0"/>
            <GradientStop Color="#111827" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#374151" Offset="0"/>
            <GradientStop Color="#1F2937" Offset="1"/>
        </LinearGradientBrush>

        <!-- Animation Storyboards -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="TrustIndicator"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="1.0" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>

        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GlowEffect"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="0.8" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Trust Tier Colors -->
        <SolidColorBrush x:Key="Tier1Color" Color="#6B7280"/>
        <SolidColorBrush x:Key="Tier2Color" Color="#3B82F6"/>
        <SolidColorBrush x:Key="Tier3Color" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="Tier4Color" Color="#F59E0B"/>
        <SolidColorBrush x:Key="Tier5Color" Color="#EF4444"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource AgencyGradient}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource TrustGradient}" Width="48" Height="48" CornerRadius="24">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ‘‘" FontSize="24" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Agency Dashboard" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF"/>
                        <TextBlock Text="Autonomous Operations & Trust Management" FontSize="14" Foreground="#E5E7EB"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Name="ConnectionStatus" Background="#10B98120" BorderBrush="#10B981" 
                           BorderThickness="1" CornerRadius="16" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Name="StatusIndicator" Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Name="StatusText" Text="Connected" FontSize="12" FontWeight="Medium" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>
                    <Button Name="RefreshButton" Content="ðŸ”„" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8" Margin="10,0,0,0"
                           Click="RefreshButton_Click"/>
                    <Button Name="SettingsButton" Content="âš™ï¸" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8" Margin="0,0,0,0"
                           Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Trust & Stats -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Trust Status -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Margin="0,0,0,20" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Trust Status" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Current Trust Score" FontSize="12" Foreground="#9CA3AF"/>
                                    <TextBlock Name="TrustScoreText" Text="87%" FontSize="24" FontWeight="Bold" 
                                              Foreground="#F59E0B"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock Text="Current Tier" FontSize="12" Foreground="#9CA3AF"/>
                                    <TextBlock Name="CurrentTierText" Text="Partner" FontSize="16" FontWeight="Bold" 
                                              Foreground="#F59E0B"/>
                                </StackPanel>
                            </Grid>

                            <!-- Trust Tiers -->
                            <StackPanel>
                                <TextBlock Text="Trust Tiers" FontSize="14" FontWeight="Medium" 
                                          Foreground="#FFFFFF" Margin="0,0,0,12"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Tier 1 -->
                                    <Border Grid.Column="0" Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,4,0">
                                        <StackPanel>
                                            <TextBlock Text="Observer" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                            <TextBlock Text="0-30%" FontSize="8" Foreground="#9CA3AF" Margin="0,2,0,4"/>
                                            <ProgressBar Height="4" Background="#1F2937" Foreground="#6B7280" Value="30" CornerRadius="2"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Tier 2 -->
                                    <Border Grid.Column="1" Background="#374151" CornerRadius="8" Padding="12" Margin="4,0">
                                        <StackPanel>
                                            <TextBlock Text="Assistant" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                            <TextBlock Text="30-60%" FontSize="8" Foreground="#9CA3AF" Margin="0,2,0,4"/>
                                            <ProgressBar Height="4" Background="#1F2937" Foreground="#3B82F6" Value="60" CornerRadius="2"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Tier 3 -->
                                    <Border Grid.Column="2" Background="#374151" CornerRadius="8" Padding="12" Margin="4,0">
                                        <StackPanel>
                                            <TextBlock Text="Collaborator" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                            <TextBlock Text="60-80%" FontSize="8" Foreground="#9CA3AF" Margin="0,2,0,4"/>
                                            <ProgressBar Height="4" Background="#1F2937" Foreground="#8B5CF6" Value="80" CornerRadius="2"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Tier 4 -->
                                    <Border Grid.Column="3" Background="#F59E0B20" BorderBrush="#F59E0B" 
                                           BorderThickness="2" CornerRadius="8" Padding="12" Margin="4,0">
                                        <StackPanel>
                                            <TextBlock Text="Partner" FontSize="10" FontWeight="Medium" Foreground="#F59E0B"/>
                                            <TextBlock Text="80-95%" FontSize="8" Foreground="#FCD34D" Margin="0,2,0,4"/>
                                            <ProgressBar Height="4" Background="#1F2937" Foreground="#F59E0B" Value="87" CornerRadius="2"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Tier 5 -->
                                    <Border Grid.Column="4" Background="#374151" CornerRadius="8" Padding="12" Margin="4,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="Sovereign" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                            <TextBlock Text="95-100%" FontSize="8" Foreground="#9CA3AF" Margin="0,2,0,4"/>
                                            <ProgressBar Height="4" Background="#1F2937" Foreground="#EF4444" Value="0" CornerRadius="2"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Agency Statistics -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Agency Statistics" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Total Actions -->
                                <Border Grid.Column="0" Grid.Row="0" Background="#8B5CF620" CornerRadius="8" Padding="12" Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="1,247" FontSize="20" FontWeight="Bold" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Total Actions" FontSize="10" Foreground="#A78BFA" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Success Rate -->
                                <Border Grid.Column="1" Grid.Row="0" Background="#10B98120" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="95.3%" FontSize="20" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Success Rate" FontSize="10" Foreground="#34D399" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Active Actions -->
                                <Border Grid.Column="0" Grid.Row="1" Background="#3B82F620" CornerRadius="8" Padding="12" Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="3" FontSize="20" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Active Actions" FontSize="10" Foreground="#60A5FA" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Rollbacks -->
                                <Border Grid.Column="1" Grid.Row="1" Background="#F59E0B20" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="12" FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Rollbacks" FontSize="10" Foreground="#FCD34D" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Avg Execution Time -->
                                <Border Grid.Column="0" Grid.Row="2" Background="#06B6D420" CornerRadius="8" Padding="12" Margin="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="2.3s" FontSize="20" FontWeight="Bold" Foreground="#06B6D4" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Avg Execution" FontSize="10" Foreground="#67E8F9" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Capabilities Used -->
                                <Border Grid.Column="1" Grid.Row="2" Background="#8B5CF620" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="156" FontSize="20" FontWeight="Bold" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Capabilities" FontSize="10" Foreground="#A78BFA" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column - Active Actions & History -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Active Actions -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Margin="0,0,0,20" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Active Actions" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <ListBox Name="ActiveActionsListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="12" Margin="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="âš¡" FontSize="16" Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding ActionType}" FontSize="12" FontWeight="Medium" Foreground="#FFFFFF"/>
                                                    <Border Grid.Column="2" Background="#F59E0B20" CornerRadius="4" Padding="4,2">
                                                        <TextBlock Text="{Binding Status}" FontSize="8" Foreground="#F59E0B"/>
                                                    </Border>
                                                </Grid>
                                                
                                                <TextBlock Grid.Row="1" Text="{Binding Resource}" FontSize="10" Foreground="#9CA3AF" Margin="24,4,0,0"/>
                                                
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="24,4,0,0">
                                                    <TextBlock Text="â±" FontSize="8" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Time}" FontSize="8" Foreground="#6B7280"/>
                                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="8" Margin="8,0,4,0"/>
                                                    <TextBlock Text="{Binding TrustRequired}" FontSize="8" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Action History -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Recent Actions" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>
                            
                            <ListBox Name="ActionHistoryListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="8" Margin="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="12" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding ActionType}" FontSize="10" FontWeight="Medium" Foreground="#FFFFFF"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Time}" FontSize="8" Foreground="#6B7280"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,20,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Name="RequestActionButton" 
                       Background="{StaticResource AgencyGradient}" Foreground="#FFFFFF"
                       CornerRadius="8" Padding="20,12" Margin="0,0,10,0"
                       Click="RequestActionButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âš¡" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Request Action" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Name="TakeTheWheelButton" 
                       Background="{StaticResource SuccessGradient}" Foreground="#FFFFFF"
                       CornerRadius="8" Padding="20,12" Margin="10,0,0,0"
                       Click="TakeTheWheelButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸš€" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Take the Wheel" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>