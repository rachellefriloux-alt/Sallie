<Page x:Class="SallieStudioApp.VoiceInterfacePremium"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource BackgroundBrush}"
      Title="Voice Interface - Premium">

    <Page.Resources>
        <!-- Premium Gradient Brushes -->
        <LinearGradientBrush x:Key="VoiceGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#A855F7" Offset="0.5"/>
            <GradientStop Color="#6366F1" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ActiveGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F97316" Offset="0.5"/>
            <GradientStop Color="#F59E0B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProcessingGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#06B6D4" Offset="0.5"/>
            <GradientStop Color="#0EA5E9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1F2937" Offset="0"/>
            <GradientStop Color="#111827" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#374151" Offset="0"/>
            <GradientStop Color="#1F2937" Offset="1"/>
        </LinearGradientBrush>

        <!-- Animation Storyboards -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="PulseScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1.0" To="1.2" Duration="0:0:1"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="PulseScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1.0" To="1.2" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="ListeningGlow" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="GlowOpacity"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="0.8" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="Height"
                           From="20" To="60" Duration="0:0:0.5"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="Height"
                           From="40" To="80" Duration="0:0:0.7"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Wave3"
                           Storyboard.TargetProperty="Height"
                           From="30" To="70" Duration="0:0:0.6"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Wave4"
                           Storyboard.TargetProperty="Height"
                           From="50" To="90" Duration="0:0:0.8"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Wave5"
                           Storyboard.TargetProperty="Height"
                           From="25" To="65" Duration="0:0:0.4"
                           AutoReverse="True"/>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource VoiceGradient}" Width="40" Height="40" CornerRadius="20">
                        <TextBlock Text="ðŸŽ¤" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Voice Interface" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                        <TextBlock Text="Premium Voice Recognition" FontSize="12" Foreground="#9CA3AF"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="SettingsButton" Content="âš™ï¸" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8" Margin="0,0,10,0"
                           Click="SettingsButton_Click"/>
                    <Button Name="TestButton" Content="ðŸ”Š" Background="#374151" Foreground="#FFFFFF"
                           Width="40" Height="40" CornerRadius="8"
                           Click="TestButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Voice Control Panel -->
                <Border Grid.Column="0" Background="{StaticResource CardBackground}" 
                        BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                        CornerRadius="12" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Voice Control" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" Margin="0,0,0,20"/>

                        <!-- Main Voice Button -->
                        <Button Name="VoiceButton" Click="VoiceButton_Click"
                               Background="{StaticResource VoiceGradient}" 
                               Foreground="#FFFFFF" Width="120" Height="120" 
                               CornerRadius="60" Margin="0,0,0,20" FontSize="48">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Name="ButtonBackground" Fill="{StaticResource VoiceGradient}"/>
                                        <Ellipse Name="PulseRing" Fill="#8B5CF6" Opacity="0.3" 
                                                Stroke="{StaticResource VoiceGradient}" StrokeThickness="2"/>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal"/>
                                                <VisualState Name="MouseOver">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                                       Storyboard.TargetProperty="Fill.Color"
                                                                       To="#A855F7" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState Name="Pressed">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                                       Storyboard.TargetProperty="Fill.Color"
                                                                       To="#6366F1" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                            ðŸŽ¤
                        </Button>

                        <!-- Status Display -->
                        <Border Background="#1F2937" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ðŸ“Š" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="Status" FontSize="14" FontWeight="Medium" 
                                              Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                    <Ellipse Grid.Column="2" Name="StatusIndicator" Width="8" Height="8" 
                                            Fill="#10B981" VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock Name="StatusText" Text="Ready to listen" FontSize="12" 
                                          Foreground="#9CA3AF" Margin="0,0,0,5"/>
                                <TextBlock Name="TranscriptText" Text="..." FontSize="11" 
                                          Foreground="#6B7280" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Audio Visualizer -->
                        <Border Background="#1F2937" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Audio Levels" FontSize="12" FontWeight="Medium" 
                                          Foreground="#8B5CF6" Margin="0,0,0,10"/>
                                <Grid Height="60" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Grid.Column="0" Name="Wave1" Fill="#8B5CF6" 
                                             Width="8" Height="20" VerticalAlignment="Bottom" RadiusX="4" RadiusY="4"/>
                                    <Rectangle Grid.Column="1" Name="Wave2" Fill="#A855F7" 
                                             Width="8" Height="40" VerticalAlignment="Bottom" RadiusX="4" RadiusY="4"/>
                                    <Rectangle Grid.Column="2" Name="Wave3" Fill="#6366F1" 
                                             Width="8" Height="30" VerticalAlignment="Bottom" RadiusX="4" RadiusY="4"/>
                                    <Rectangle Grid.Column="3" Name="Wave4" Fill="#8B5CF6" 
                                             Width="8" Height="50" VerticalAlignment="Bottom" RadiusX="4" RadiusY="4"/>
                                    <Rectangle Grid.Column="4" Name="Wave5" Fill="#A855F7" 
                                             Width="8" Height="25" VerticalAlignment="Bottom" RadiusX="4" RadiusY="4"/>
                                </Grid>
                                <TextBlock Name="AudioLevelText" Text="Silence" FontSize="10" 
                                          Foreground="#6B7280" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Connection Quality -->
                        <Border Background="#1F2937" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“¡" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="Connection Quality" FontSize="12" 
                                          Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Name="ConnectionQualityText" Text="Excellent" 
                                          FontSize="12" FontWeight="Medium" Foreground="#10B981"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Settings & Configuration -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Voice Settings -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Margin="0,0,0,20" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Voice Settings" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>

                            <!-- Language Selection -->
                            <Border Background="#1F2937" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Language" FontSize="12" FontWeight="Medium" 
                                              Foreground="#8B5CF6" Margin="0,0,0,10"/>
                                    <ComboBox Name="LanguageComboBox" Width="100%" Height="35" 
                                             Background="#374151" Foreground="#FFFFFF" BorderBrush="#4B5563">
                                        <ComboBoxItem Content="ðŸ‡ºðŸ‡¸ English (US)" Tag="en-US" IsSelected="True"/>
                                        <ComboBoxItem Content="ðŸ‡¬ðŸ‡§ English (UK)" Tag="en-GB"/>
                                        <ComboBoxItem Content="ðŸ‡ªðŸ‡¸ Spanish" Tag="es-ES"/>
                                        <ComboBoxItem Content="ðŸ‡«ðŸ‡· French" Tag="fr-FR"/>
                                        <ComboBoxItem Content="ðŸ‡©ðŸ‡ª German" Tag="de-DE"/>
                                        <ComboBoxItem Content="ðŸ‡®ðŸ‡¹ Italian" Tag="it-IT"/>
                                        <ComboBoxItem Content="ðŸ‡§ðŸ‡· Portuguese" Tag="pt-BR"/>
                                        <ComboBoxItem Content="ðŸ‡·ðŸ‡º Russian" Tag="ru-RU"/>
                                        <ComboBoxItem Content="ðŸ‡¯ðŸ‡µ Japanese" Tag="ja-JP"/>
                                        <ComboBoxItem Content="ðŸ‡°ðŸ‡· Korean" Tag="ko-KR"/>
                                        <ComboBoxItem Content="ðŸ‡¨ðŸ‡³ Chinese" Tag="zh-CN"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <!-- Sensitivity Control -->
                            <Border Background="#1F2937" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Sensitivity" FontSize="12" FontWeight="Medium" 
                                                  Foreground="#8B5CF6"/>
                                        <TextBlock Grid.Column="1" Name="SensitivityValueText" Text="70%" 
                                                  FontSize="12" Foreground="#9CA3AF"/>
                                    </Grid>
                                    <Slider Name="SensitivitySlider" Minimum="0" Maximum="100" Value="70" 
                                           Width="100%" Height="30" Foreground="#8B5CF6"/>
                                </StackPanel>
                            </Border>

                            <!-- Toggle Options -->
                            <Border Background="#1F2937" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Options" FontSize="12" FontWeight="Medium" 
                                              Foreground="#8B5CF6" Margin="0,0,0,10"/>
                                    <StackPanel>
                                        <CheckBox Name="AutoSubmitCheckBox" Content="Auto-submit when done" 
                                                 Foreground="#D1D5DB" IsChecked="True" Margin="0,0,0,8"/>
                                        <CheckBox Name="ContinuousCheckBox" Content="Continuous listening" 
                                                 Foreground="#D1D5DB" IsChecked="False" Margin="0,0,0,8"/>
                                        <CheckBox Name="NoiseSuppressionCheckBox" Content="Noise suppression" 
                                                 Foreground="#D1D5DB" IsChecked="True" Margin="0,0,0,8"/>
                                        <CheckBox Name="EchoCancellationCheckBox" Content="Echo cancellation" 
                                                 Foreground="#D1D5DB" IsChecked="True"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Voice Commands -->
                    <Border Background="{StaticResource CardBackground}" 
                            BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Voice Commands" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" Margin="0,0,0,20"/>

                            <ListBox Name="CommandsListBox" Background="#1F2937" BorderBrush="#374151" 
                                    BorderThickness="1" Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#374151" CornerRadius="6" Padding="12" Margin="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Command}" FontSize="12" FontWeight="Medium" 
                                                          Foreground="#8B5CF6" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Description}" FontSize="11" 
                                                          Foreground="#D1D5DB" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Shortcut}" FontSize="10" 
                                                          Foreground="#9CA3AF" FontFamily="Consolas"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderGradient}" BorderThickness="1" 
                CornerRadius="12" Margin="0,20,0,0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Name="StatusBarIndicator" Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                    <TextBlock Name="StatusBarText" Text="Voice System Active" FontSize="12" Foreground="#9CA3AF"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Premium Recognition" FontSize="12" Foreground="#9CA3AF" Margin="0,0,15,0"/>
                    <TextBlock Text="Real-time Processing" FontSize="12" Foreground="#9CA3AF"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>