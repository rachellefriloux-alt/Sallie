<Page
    x:Class="SallieStudioApp.AvatarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Sallie's Avatar Workshop" Style="{StaticResource HeaderTextBlockStyle}" />
            <TextBlock Text="Manifest thoughts into visual form" Style="{StaticResource SubheaderTextBlockStyle}" />
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="20,0,20,20">
            <StackPanel Spacing="20">

                <!-- Current Avatar Display -->
                <Border Background="{ThemeResource CardBackgroundFillColor}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Current Manifestation" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <Border Height="200" Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                CornerRadius="8" Margin="0,10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ§ " FontSize="48" HorizontalAlignment="Center" />
                                <TextBlock Text="Sallie's Current Avatar" HorizontalAlignment="Center" 
                                           Style="{StaticResource BodyTextBlockStyle}" />
                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                            <Button Content="Evolve Avatar" />
                            <Button Content="Save Manifestation" />
                            <Button Content="Generate Variations" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Thought Input -->
                <Border Background="{ThemeResource CardBackgroundFillColor}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Manifest from Thought" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBox Header="What are you thinking, Sallie?" 
                                 PlaceholderText="I'm thinking about..." 
                                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 Margin="0,10" />
                        
                        <!-- Emotion Selector -->
                        <TextBlock Text="How does this feel?" Margin="0,10,0,5" />
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <RadioButton Content="Happy" />
                            <RadioButton Content="Curious" />
                            <RadioButton Content="Contemplative" />
                            <RadioButton Content="Excited" />
                            <RadioButton Content="Calm" />
                        </StackPanel>
                        
                        <!-- Context -->
                        <TextBox Header="Context (optional)" 
                                 PlaceholderText="What are we doing?" 
                                 Margin="0,10" />
                        
                        <Button Content="Manifest This Thought" 
                                Style="{StaticResource AccentButtonStyle}" 
                                HorizontalAlignment="Center" 
                                Margin="0,15,0,0" />
                    </StackPanel>
                </Border>

                <!-- Available Thought Forms -->
                <Border Background="{ThemeResource CardBackgroundFillColor}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Available Thought Forms" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <GridView Height="200" Margin="0,10">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColor}" 
                                            CornerRadius="8" Padding="15" Width="150" Height="150">
                                        <StackPanel>
                                            <TextBlock Text="ðŸŒŒ" FontSize="24" HorizontalAlignment="Center" />
                                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" 
                                                       TextWrapping="Wrap" TextAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                </Border>

                <!-- Avatar History -->
                <Border Background="{ThemeResource CardBackgroundFillColor}" 
                        CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Recent Manifestations" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <ListView Height="150" Margin="0,10">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColor}" 
                                            CornerRadius="4" Padding="10" Margin="0,2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ§ " Margin="0,0,10,0" />
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Avatar Status: " />
                <TextBlock Text="Ready" Foreground="Green" />
                <TextBlock Text=" | Manifestations: " Margin="20,0,0,0" />
                <TextBlock Text="0" />
                <TextBlock Text=" | Core Identity: " Margin="20,0,0,0" />
                <TextBlock Text="Protected" Foreground="Blue" />
            </StackPanel>
        </Border>

    </Grid>

</Page>
