<Page
    x:Class="SallieStudioApp.ConvergenceExperiencePremium"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Premium Gradient Brushes -->
        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9333EA" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PinkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EC4899" Offset="0"/>
            <GradientStop Color="#F43F5E" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="EmeraldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#14B8A6" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AmberGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#EA580C" Offset="1"/>
        </LinearGradientBrush>

        <!-- Premium Storyboards -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
        </Storyboard>
        
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="50" To="0" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="PulseAnimation">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" From="1" To="1.1" Duration="0:0:0.2" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" From="1" To="1.1" Duration="0:0:0.2" AutoReverse="True"/>
        </Storyboard>

        <!-- Premium Styles -->
        <Style x:Key="PremiumCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource AcrylicBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#9333EA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#9333EA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="PremiumPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PurpleGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1B4B" Offset="0"/>
                <GradientStop Color="#581C87" Offset="0.5"/>
                <GradientStop Color="#1E1B4B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer>
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Premium Header -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,24,0,32">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="32" Foreground="#FBBF24" Margin="0,0,12,0"/>
                        <TextBlock Text="Premium Convergence Experience" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,12,0"/>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="32" Foreground="#FBBF24"/>
                    </StackPanel>
                    <TextBlock Text="Advanced AI-Human Synchronization with Real-time Limbic State Analysis" 
                               FontSize="18" Foreground="#E9D5FF" TextAlignment="Center" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Main Content Grid -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Main Convergence Interface -->
                    <Border Grid.Column="0" Style="{StaticResource PremiumCardStyle}" Margin="0,0,12,0">
                        <StackPanel>
                            <!-- Phase Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <Border x:Name="PhaseIconContainer" CornerRadius="12" Width="56" Height="56" Margin="0,0,16,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#9333EA" Offset="0"/>
                                            <GradientStop Color="#3B82F6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <FontIcon x:Name="PhaseIcon" FontFamily="Segoe Fluent Icons" Glyph="&#xE7C4;" 
                                             FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="PhaseTitle" Text="Purpose & Intent" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="PhaseSubtitle" Text="Phase 1 of 4" FontSize="14" Foreground="#E9D5FF"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Question -->
                            <TextBlock x:Name="QuestionText" Text="What brings you to Sallie today?" 
                                      FontSize="20" Foreground="White" Margin="0,0,0,24" TextWrapping="Wrap"/>

                            <!-- Options -->
                            <ItemsControl x:Name="OptionsContainer">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource PremiumButtonStyle}" 
                                               HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                               Margin="0,0,0,12" Padding="16">
                                            <Grid>
                                                <TextBlock Text="{Binding}" FontSize="16" Foreground="#E9D5FF"/>
                                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE70E;" 
                                                        FontSize="20" Foreground="White" HorizontalAlignment="Right" 
                                                        Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Sallie's Response -->
                            <Border x:Name="ResponseContainer" CornerRadius="12" Margin="0,24,0,24" 
                                   Background="rgba(147, 51, 234, 0.2)" BorderBrush="#9333EA" BorderThickness="1" Padding="20" Visibility="Collapsed">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border CornerRadius="20" Width="40" Height="40" Margin="0,0,12,0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#9333EA" Offset="0"/>
                                                    <GradientStop Color="#EC4899" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" 
                                                     FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Sallie's Response" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock x:Name="ResponseText" Text="" FontSize="14" Foreground="#E9D5FF" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Navigation -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PreviousButton" Grid.Column="0" Content="Previous" 
                                       Style="{StaticResource PremiumButtonStyle}" HorizontalAlignment="Left" 
                                       IsEnabled="False" Click="PreviousButton_Click"/>
                                <Button x:Name="NextButton" Grid.Column="1" Content="Next Phase" 
                                       Style="{StaticResource PremiumPrimaryButtonStyle}" HorizontalAlignment="Right" 
                                       IsEnabled="False" Click="NextButton_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Premium Analytics Panel -->
                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <!-- Limbic State Display -->
                        <Border Style="{StaticResource PremiumCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Limbic State Analysis" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>
                                
                                <!-- Trust Gauge -->
                                <StackPanel Margin="0,0,0,12">
                                    <Grid Margin="0,0,0,4">
                                        <TextBlock Text="Trust" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <TextBlock x:Name="TrustValue" Text="50%" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Border Height="8" CornerRadius="4" Background="rgba(147, 51, 234, 0.2)">
                                        <Border x:Name="TrustBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="50">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#9333EA" Offset="0"/>
                                                    <GradientStop Color="#A855F7" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </StackPanel>

                                <!-- Warmth Gauge -->
                                <StackPanel Margin="0,0,0,12">
                                    <Grid Margin="0,0,0,4">
                                        <TextBlock Text="Warmth" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <TextBlock x:Name="WarmthValue" Text="50%" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Border Height="8" CornerRadius="4" Background="rgba(147, 51, 234, 0.2)">
                                        <Border x:Name="WarmthBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="50">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#EC4899" Offset="0"/>
                                                    <GradientStop Color="#F472B6" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </StackPanel>

                                <!-- Arousal Gauge -->
                                <StackPanel Margin="0,0,0,12">
                                    <Grid Margin="0,0,0,4">
                                        <TextBlock Text="Arousal" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <TextBlock x:Name="ArousalValue" Text="50%" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Border Height="8" CornerRadius="4" Background="rgba(147, 51, 234, 0.2)">
                                        <Border x:Name="ArousalBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="50">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                                    <GradientStop Color="#FCD34D" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </StackPanel>

                                <!-- Valence Gauge -->
                                <StackPanel Margin="0,0,0,12">
                                    <Grid Margin="0,0,0,4">
                                        <TextBlock Text="Valence" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <TextBlock x:Name="ValenceValue" Text="50%" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Border Height="8" CornerRadius="4" Background="rgba(147, 51, 234, 0.2)">
                                        <Border x:Name="ValenceBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="50">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#10B981" Offset="0"/>
                                                    <GradientStop Color="#34D399" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </StackPanel>

                                <!-- Current Posture -->
                                <Border Background="rgba(147, 51, 234, 0.2)" CornerRadius="8" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="Current Posture:" FontSize="14" Foreground="#E9D5FF" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="PostureValue" Text="Companion" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Voice Controls -->
                        <Border Style="{StaticResource PremiumCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Voice Interface" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <Button x:Name="VoiceToggleButton" Style="{StaticResource PremiumButtonStyle}" 
                                           Width="56" Height="56" CornerRadius="28" Margin="0,0,16,0" Click="VoiceToggleButton_Click">
                                        <FontIcon x:Name="VoiceIcon" FontFamily="Segoe Fluent Icons" Glyph="&#xE720;" 
                                                FontSize="24" Foreground="#A78BFA"/>
                                    </Button>
                                    
                                    <Button x:Name="MuteToggleButton" Style="{StaticResource PremiumButtonStyle}" 
                                           Width="56" Height="56" CornerRadius="28" Click="MuteToggleButton_Click">
                                        <FontIcon x:Name="MuteIcon" FontFamily="Segoe Fluent Icons" Glyph="&#xE767;" 
                                                FontSize="24" Foreground="#A78BFA"/>
                                    </Button>
                                </StackPanel>
                                
                                <TextBlock x:Name="VoiceStatusText" Text="Voice recognition inactive" 
                                          FontSize="14" Foreground="#E9D5FF" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Premium Features -->
                        <Border Style="{StaticResource PremiumCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Premium Features" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>
                                
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <TextBlock Text="Enhanced Visualizations" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <Ellipse Width="12" Height="12" Fill="#10B981" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,12">
                                        <TextBlock Text="Advanced Analytics" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <Ellipse Width="12" Height="12" Fill="#10B981" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,12">
                                        <TextBlock Text="Personalized Guidance" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <Ellipse Width="12" Height="12" Fill="#10B981" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="Real-time Feedback" FontSize="14" Foreground="#E9D5FF" HorizontalAlignment="Left"/>
                                        <Ellipse Width="12" Height="12" Fill="#10B981" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Processing Overlay -->
        <Grid x:Name="ProcessingOverlay" Visibility="Collapsed" Background="#80000000">
            <Border Background="{ThemeResource AcrylicBackgroundBrush}" CornerRadius="20" Padding="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7C4;" FontSize="48" Foreground="#9333EA" HorizontalAlignment="Center">
                        <FontIcon.RenderTransform>
                            <ScaleTransform x:Name="ProcessingScale" ScaleX="1" ScaleY="1"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                    <TextBlock Text="Processing your response..." FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
