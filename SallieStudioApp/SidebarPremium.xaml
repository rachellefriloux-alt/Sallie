<Page
    x:Class="SallieStudioApp.SidebarPremium"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SallieStudioApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Premium Gradient Brushes -->
        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9333EA" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PinkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EC4899" Offset="0"/>
            <GradientStop Color="#F43F5E" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="EmeraldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#14B8A6" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AmberGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#EA580C" Offset="1"/>
        </LinearGradientBrush>

        <!-- Premium Storyboards -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-300" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="SlideOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="0" To="-300" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Premium Styles -->
        <Style x:Key="PremiumCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource AcrylicBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#9333EA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="SelectedNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="rgba(251, 191, 36, 0.2)"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="rgba(147, 51, 234, 0.2)"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1B4B" Offset="0"/>
                <GradientStop Color="#581C87" Offset="0.5"/>
                <GradientStop Color="#1E1B4B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Sidebar Container -->
        <Border x:Name="SidebarContainer" Width="320" HorizontalAlignment="Left" Style="{StaticResource PremiumCardStyle}">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="24" Foreground="#FBBF24" Margin="0,0,12,0"/>
                            <TextBlock Text="Sallie Studio" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            <Border Background="#FBBF24" CornerRadius="8" Padding="4,2" Margin="8,0,0,0">
                                <TextBlock Text="PRO" FontSize="10" FontWeight="Bold" Foreground="#1E1B4B"/>
                            </Border>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Padding="8" Click="CloseButton_Click">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;" FontSize="16" Foreground="#E9D5FF"/>
                        </Button>
                    </Grid>

                    <!-- Search Bar -->
                    <Border Background="rgba(147, 51, 234, 0.2)" CornerRadius="8" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <FontIcon Grid.Column="0" FontFamily="Segoe Fluent Icons" Glyph="&#xE721;" FontSize="16" Foreground="#A78BFA" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1" x:Name="SearchBox" PlaceholderText="Search navigation..." 
                                    Background="Transparent" BorderThickness="0" Foreground="White" 
                                    PlaceholderForegroundBrush="#6B7280" FontSize="14"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Quick Actions -->
                <Border Grid.Row="1" Background="rgba(147, 51, 234, 0.1)" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="14" FontWeight="SemiBold" Foreground="#E9D5FF" Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" Style="{StaticResource QuickActionButtonStyle}" Margin="0,0,4,0" Click="QuickAction_NewSession">
                                <StackPanel>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" FontSize="16" Foreground="#10B981" HorizontalAlignment="Center"/>
                                    <TextBlock Text="New" FontSize="10" Foreground="#E9D5FF" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="1" Style="{StaticResource QuickActionButtonStyle}" Margin="4,0,4,0" Click="QuickAction_VoiceToggle">
                                <StackPanel>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE720;" FontSize="16" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Voice" FontSize="10" Foreground="#E9D5FF" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="2" Style="{StaticResource QuickActionButtonStyle}" Margin="4,0,4,0" Click="QuickAction_SyncData">
                                <StackPanel>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE895;" FontSize="16" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sync" FontSize="10" Foreground="#E9D5FF" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="3" Style="{StaticResource QuickActionButtonStyle}" Margin="4,0,0,0" Click="QuickAction_Export">
                                <StackPanel>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE894;" FontSize="16" Foreground="#EC4899" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Export" FontSize="10" Foreground="#E9D5FF" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                    <StackPanel>
                        <!-- Premium Features Section -->
                        <TextBlock Text="Premium Features" FontSize="12" FontWeight="SemiBold" Foreground="#A78BFA" Margin="0,0,0,12" TextTransform="Uppercase"/>
                        
                        <StackPanel x:Name="PremiumFeaturesList" Margin="0,0,0,24">
                            <Button x:Name="Nav_Dashboard" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE809;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Dashboard" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Convergence" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7C4;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Convergence" Foreground="#E9D5FF"/>
                                    <Border Background="#EF4444" CornerRadius="10" Padding="4,2" Margin="8,0,0,0">
                                        <TextBlock Text="3" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Agency" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BE;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Agency" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Identity" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE77B;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Identity" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Learning" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7EC;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Learning" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_DreamState" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE721;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Dream State" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_LimbicScreen" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE9D2;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Limbic Screen" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_VoiceInterface" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE720;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Voice Interface" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_ChatArea" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BD;" FontSize="16" Foreground="#E9D5FF" Margin="0,0,12,0"/>
                                    <TextBlock Text="Chat Area" Foreground="#E9D5FF"/>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;" FontSize="12" Foreground="#FBBF24" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Standard Features Section -->
                        <TextBlock Text="Standard Features" FontSize="12" FontWeight="SemiBold" Foreground="#A78BFA" Margin="0,0,0,12" TextTransform="Uppercase"/>
                        
                        <StackPanel x:Name="StandardFeaturesList">
                            <Button x:Name="Nav_Projects" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage" IsEnabled="False">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8F1;" FontSize="16" Foreground="#6B7280" Margin="0,0,12,0"/>
                                    <TextBlock Text="Projects" Foreground="#6B7280"/>
                                    <Border Background="rgba(107, 114, 128, 0.3)" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                                        <TextBlock Text="Coming Soon" FontSize="10" Foreground="#9CA3AF"/>
                                    </Border>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Heritage" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage" IsEnabled="False">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE93B;" FontSize="16" Foreground="#6B7280" Margin="0,0,12,0"/>
                                    <TextBlock Text="Heritage" Foreground="#6B7280"/>
                                    <Border Background="rgba(107, 114, 128, 0.3)" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                                        <TextBlock Text="Coming Soon" FontSize="10" Foreground="#9CA3AF"/>
                                    </Border>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="Nav_Settings" Style="{StaticResource NavButtonStyle}" Click="NavigateToPage" IsEnabled="False">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE713;" FontSize="16" Foreground="#6B7280" Margin="0,0,12,0"/>
                                    <TextBlock Text="Settings" Foreground="#6B7280"/>
                                    <Border Background="rgba(107, 114, 128, 0.3)" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                                        <TextBlock Text="Coming Soon" FontSize="10" Foreground="#9CA3AF"/>
                                    </Border>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <!-- Connection Status -->
                    <Border Background="rgba(16, 185, 129, 0.2)" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="Connected to Backend" FontSize="12" Foreground="#10B981" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Premium Features Status -->
                    <Border Background="rgba(147, 51, 234, 0.1)" CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Premium Features Active" FontSize="12" FontWeight="SemiBold" Foreground="#E9D5FF" Margin="0,0,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE773;" FontSize="10" Foreground="#10B981" Margin="0,0,4,0"/>
                                    <TextBlock Text="Enhanced Nav" FontSize="10" Foreground="#E9D5FF"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE9D2;" FontSize="10" Foreground="#10B981" Margin="0,0,4,0"/>
                                    <TextBlock Text="Analytics" FontSize="10" Foreground="#E9D5FF"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7B3;" FontSize="10" Foreground="#10B981" Margin="0,0,4,0"/>
                                    <TextBlock Text="Smart Search" FontSize="10" Foreground="#E9D5FF"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8F1;" FontSize="10" Foreground="#10B981" Margin="0,0,4,0"/>
                                    <TextBlock Text="Quick Actions" FontSize="10" Foreground="#E9D5FF"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Backdrop -->
        <Grid x:Name="Backdrop" Background="#80000000" Visibility="Collapsed" Tapped="Backdrop_Tapped"/>
    </Grid>
</Page>
