# Azure Environment Configuration for Sallie Studio
# Copy this file to .env and update with your actual values

# Azure Database Configuration
DATABASE_URL=postgresql://sallieadmin:YourSecurePassword123!@sallie-studio-db.postgres.database.azure.com:5432/sallie_studio
POSTGRES_PASSWORD=YourSecurePassword123!

# Azure Redis Configuration
REDIS_URL=redis://sallie-studio-redis.redis.cache.windows.net:6380,password=YourRedisPassword,ssl=True
REDIS_PASSWORD=YourRedisPassword

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT=salliestorage
AZURE_STORAGE_KEY=YourAzureStorageKey
AZURE_CONTAINER_NAME=files

# Azure App Insights
APPINSIGHTS_CONNECTION_STRING=YourAppInsightsConnectionString

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-super-secret-session-key-change-in-production

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@sallie.studio

# Service URLs (Azure endpoints)
AUTH_SERVICE_URL=https://sallie-auth-service.azurewebsites.net
CHAT_SERVICE_URL=https://sallie-chat-service.azurewebsites.net
ANALYTICS_SERVICE_URL=https://sallie-analytics-service.azurewebsites.net
NOTIFICATION_SERVICE_URL=https://sallie-notification-service.azurewebsites.net
FILE_SERVICE_URL=https://sallie-file-service.azurewebsites.net
AI_SERVICE_URL=https://sallie-ai-service.azurewebsites.net
WEBSOCKET_SERVICE_URL=https://sallie-websocket-service.azurewebsites.net
PYTHON_AI_SERVICE_URL=https://sallie-python-ai-service.azurewebsites.net

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Monitoring Configuration
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Application Configuration
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Azure Resource Group Configuration
RESOURCE_GROUP=sallie
LOCATION=centralus
ACR_NAME=salliestudioregistry
APP_SERVICE_PLAN=sallie

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# CORS Configuration
CORS_ORIGINS=["https://sallie-studio.azurewebsites.net", "https://www.sallie-studio.com"]

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=sallie-studio
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
