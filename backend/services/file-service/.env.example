# Application Configuration
APP_NAME=File Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=3005

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sallie_files
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/3
REDIS_CACHE_TTL=3600

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=sallie-files
MINIO_USE_SSL=false

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring & Observability
PROMETHEUS_PORT=9095
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "gif", "pdf", "doc", "docx", "txt", "mp4", "mp3"]

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# OpenTelemetry
OTEL_SERVICE_NAME=file-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
