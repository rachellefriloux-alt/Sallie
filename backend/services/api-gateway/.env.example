# Application Configuration
APP_NAME=API Gateway
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
CHAT_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
FILE_SERVICE_URL=http://localhost:3005
AI_SERVICE_URL=http://localhost:3006
WEBSOCKET_SERVICE_URL=http://localhost:3007
PYTHON_AI_SERVICE_URL=http://localhost:3008

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring & Observability
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REDIS_PREFIX=rate_limit:

# Load Balancing Configuration
LOAD_BALANCER_STRATEGY=round_robin
HEALTH_CHECK_INTERVAL=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# OpenTelemetry
OTEL_SERVICE_NAME=api-gateway
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
