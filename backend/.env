# Sallie Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sallie_db
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/sallie_mongo
QDRANT_URL=http://localhost:6333

# Docker Services Configuration
POSTGRES_DB=sallie_studio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
REDIS_PASSWORD=

# SMTP Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@sallie-studio.com

# Push Notification Service
PUSH_SERVICE_KEY=

# MinIO Configuration (file storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Azure Cognitive Services Configuration
AZURE_COGNITIVE_SERVICES_KEY=your_cognitive_services_key_here
AZURE_SPEECH_SERVICES_KEY=your_speech_services_key_here
AZURE_OPENAI_KEY=your_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=sallie-model

# Backend Configuration
BACKEND_URL=http://192.168.1.47:8742
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8742
DEBUG=False
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT=100

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,mp3,wav,mp4

# External Services Configuration
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Configuration
AZURE_MODE=true
ENVIRONMENT=development
LOG_TO_FILE=True
LOG_TO_CONSOLE=True
NODE_ENV=development
